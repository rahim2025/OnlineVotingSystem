<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">
                        <i class="fas fa-comment-dots"></i> Share Your Opinion
                    </h2>

                    <form action="/opinions/create" method="POST">
                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" class="form-control" id="title" name="title" required
                                placeholder="Give your opinion a title">
                        </div>

                        <div class="mb-3">
                            <label for="content" class="form-label">Your Opinion</label>
                            <textarea class="form-control" id="content" name="content" rows="6" required
                                placeholder="Share your thoughts with the community..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="tags" class="form-label">Tags (comma-separated)</label>
                            <input type="text" class="form-control" id="tags" name="tags"
                                placeholder="e.g., education, healthcare, environment">
                            <div class="form-text">Add relevant tags to help others find your opinion</div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane"></i> Share Opinion
                            </button>
                            <a href="/opinions" class="btn btn-secondary btn-lg ms-2">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
