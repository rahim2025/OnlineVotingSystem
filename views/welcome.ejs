<!-- Hero Section -->
<div class="hero-section bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4 fw-bold">Bangladesh Pure Democratic Party</h1>
                <p class="lead">Your Voice Matters to Us! Together We Can Build a Better Bangladesh.</p>
                <% if (!user) { %>
                    <div class="mt-4">
                        <a href="/users/register" class="btn btn-light btn-lg me-3">Join Us Now</a>
                        <a href="/users/login" class="btn btn-outline-light btn-lg">Member Login</a>
                    </div>
                <% } else { %>
                    <a href="/dashboard" class="btn btn-light btn-lg mt-4">Member Dashboard</a>
                <% } %>
            </div>
            <div class="col-md-6">
                <img src="/img/vote.svg" alt="Democratic Party Illustration" class="img-fluid">
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container mb-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-vote-yea fa-3x text-primary mb-3"></i>
                    <h3 class="card-title">Democratic Values</h3>
                    <p class="card-text">We stand for transparency, integrity, and true democratic principles.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h3 class="card-title">People's Party</h3>
                    <p class="card-text">Meet our dedicated leaders working for Bangladesh's prosperity.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-chart-bar fa-3x text-primary mb-3"></i>
                    <h3 class="card-title">Public Opinion</h3>
                    <p class="card-text">We listen to your voice and shape our policies accordingly.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- News Section -->
<div class="container mb-5">
    <h2 class="text-center mb-4">Latest News</h2>
    <div class="row g-4">
        <% if (news && news.length > 0) { %>
            <% news.forEach(function(article) { %>
                <div class="col-md-4">
                    <div class="card h-100">
                        <% if (article.urlToImage) { %>
                            <img src="<%= article.urlToImage %>" class="card-img-top" alt="News Image" style="height: 200px; object-fit: cover;">
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title"><%= article.title %></h5>
                            <p class="card-text"><%= article.description %></p>
                            <a href="<%= article.url %>" target="_blank" class="btn btn-outline-primary">Read More</a>
                        </div>
                        <div class="card-footer text-muted">
                            <small>Published: <%= new Date(article.publishedAt).toLocaleDateString() %></small>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12 text-center">
                <p>No news available at the moment.</p>
            </div>
        <% } %>
    </div>
</div>

<!-- Call to Action -->
<div class="bg-light py-5">
    <div class="container text-center">
        <h2 class="mb-4">Join the Movement for Change</h2>
        <p class="lead mb-4">Be part of Bangladesh's democratic future. Your participation matters!</p>
        <% if (!user) { %>
            <a href="/users/register" class="btn btn-primary btn-lg">Become a Member</a>
        <% } else { %>
            <a href="/dashboard" class="btn btn-primary btn-lg">Access Dashboard</a>
        <% } %>
    </div>
</div>
